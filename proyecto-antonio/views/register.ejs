<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton-framework/1.0.8/skeleton.min.css">
        <link rel="stylesheet" href="/css/styles.css">
        <title>Document</title>
    </head>
    <body id="test">
        <div class="header">
            <div class="line"></div> <a href="/users/register">Register</a> <div class="line"></div>
            <a href="/users/login">Login</a> <div class="line"></div> 
            <a href="/users/dashboard">Dashboard</a> <div class="line"></div>
        </div>
        <div class="container">
        <h1>Register</h1>

        <!-- Lista que muestra los errores en la form al registrarse-->
        <ul>
            <% if(typeof errors != 'undefined') {%> <% errors.forEach(error=>{ %>
                    <li style="color: red;"><%= error.message %></li>
            <% }) %> <% } %>
        </ul>


        <form action="/users/register" method="POST">
            <div class="label">
                <label for="name">Username:</label>
            </div>
            <div class="name">
                <input type="text" name="name" id="name" placeholder="name" required>
            </div>
            <div class="label">
                <label for="email">Email:</label>
            </div>
            <div>
                <input type="email" name="email" id="email" placeholder="email@xxxx.com">
            </div>
            <div class="label">
                <label for="password">Password:</label>
            </div>            
            <div>
                <input type="password" name="password" id="password" placeholder="password" required>
            </div>
            <div class="label">
                <label for="password2">Repeat the password:</label>
            </div>
            <div>
                <input type="password" name="password2" id="password2" placeholder="password" required>
            </div>
            <div>
                <input type="submit" value="Register">
            </div>
        </form>
        <a href="/users/login">Already have an account? Login here</a>
        </div>
    </body>
</html>